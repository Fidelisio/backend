{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "moduleNameMapper": {
    "^CRM/(.*)$": "<rootDir>/../src/CRM/$1",
    "^Auth/(.*)$": "<rootDir>/../src/Auth/$1",
    "^Infrastructure/(.*)$": "<rootDir>/../src/Infrastructure/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}